.slider-left-enter-active
  transition all 0.2s
  transition-delay 0.25s
.slider-left-leave-active
  transition all 0.2s
.slider-left-enter, .slider-left-leave-to
  opacity 0
  transform translate(-100%, 0)
.slider-left-enter-to, .slider-left-leave
  opacity 1
  transform translate(0, 0)

.slider-top-enter-active, .slider-top-leave-active
  transition all 0.3s
.slider-top-enter, .slider-top-leave-to
  opacity 0
  transform translate(0, -100%)

.fade-enter-active, .fade-leave-active
  transition opacity 0.5s
.fade-enter, .fade-leave-to
  opacity 0
.fade-enter-to, .fade-leave
  opacity 1